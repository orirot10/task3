<!DOCTYPE html>
<html>
<head>
    <title>Message Board</title>
</head>
<body>
    <h1>Messages</h1>
    <ul>
      <% messages.forEach(function(message) { %>
        <li>
          <strong><%= message.user %>:</strong> <%= message.text %> 
          (added on <%= message.added.toLocaleDateString() %> at <%= message.added.toLocaleTimeString() %>)
        </li>
      <% }) %>
    </ul>

    <a href="/new">Add a new message</a>
</body>
</html>
